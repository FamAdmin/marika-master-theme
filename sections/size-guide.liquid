<div class="size-guide-popup modal modal-open">
  <div class="modal-content">
    <div class="myclosebox">
      <a name="close-me-now" id="close-size-guide"><img src="https://cdn.shopify.com/s/files/1/1565/8379/files/d7ee2b63482a94bd2c769c513f1ada67.png?6827106314998524564"></a>
    </div>
    <h3>{{- section.settings['popup_main_header'] -}}</h3>
    <p>{{- section.settings['popup_main_info'] -}}</p>

    <table class="size-guide-table">
      <thead>
        {%- assign sizeNames = section.blocks[0].settings.sizes | newline_to_br -%}
        {%- assign sizeNameArray = sizeNames | split: '<br />' -%}
        <th></th>
        {%- for sizeName in sizeNameArray -%}
          {%- assign size_name = sizeName | split: '|' | first -%}
          <th>{{- size_name-}}</th>
        {%- endfor -%}
      </thead>
      <tbody>
        {%- for block in section.blocks -%}
          <tr>
            {%- assign blockSettings = block.settings -%}
            {%- assign sizeTag = block.settings.title | split: '|' -%}
            {%- assign sizes = block.settings.sizes | newline_to_br -%}
            {%- assign sizesArray = sizes | split: '<br />' -%}
            <td>{{- sizeTag -}}</td>
            {%- for size in sizesArray -%}
              {%- assign name = size | split: '|' | last -%}
              <td>{{- name -}}</td>
            {%- endfor -%}
          </tr>
        {%- endfor -%}
      </tbody>
    </table>
