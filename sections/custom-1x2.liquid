{% schema %}
{
  "name": "Custom 1x2",
  "class": "custom-1x2-section",
  "settings": [
    {
      "type": "select",
      "id": "featured_promos_per_row",
      "label": "Promotions per row",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "featured_promos_grid",
      "label": "Promotions grid",
      "options": [
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "full_width",
          "label": "Full width"
        }
      ],
      "default": "full_width"
    },
    {
      "type": "select",
      "id": "featured_links_animation",
      "label": "Promotions animation",
      "options": [
        {
          "value": "",
          "label": "None"
        },
        {
          "value": "fadeIn",
          "label": "Fade In"
        },
        {
          "value": "fadeInUp",
          "label": "Fade Up"
        },
        {
          "value": "fadeInDown",
          "label": "Fade Down"
        }
      ],
      "default": "fadeInDown"
    },
    {
      "type": "select",
      "id": "feature_style",
      "label": "Promotions style",
      "options": [
        {
          "value": "circle",
          "label": "Circle"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "rounded",
          "label": "Rounded"
        }
      ],
      "default": "square"
    },
    {
      "type": "checkbox",
      "id": "promo_text_on_image_enabled",
      "label": "Show title on image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "text_on_image_hover",
      "label": "Show description & box on image hover",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1",
      "info": "840 x 840px recommended"
    },
    {
      "type": "url",
      "id": "link1",
      "label": "Link 1"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "Header 1",
      "default": "Feature"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Text 1",
      "default": "<p>Promotion description details.</p>"
    },
    {
      "type": "text",
      "id": "button_label1",
      "label": "Button label 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2",
      "info": "840 x 840px recommended"
    },
    {
      "type": "url",
      "id": "link2",
      "label": "Link 2"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Header 2",
      "default": "Feature"
    },
    {
      "type": "richtext",
      "id": "text2",
      "label": "Text 2",
      "default": "<p>Promotion description details.</p>"
    },
    {
      "type": "text",
      "id": "button_label2",
      "label": "Button label 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3",
      "info": "840 x 840px recommended"
    },
    {
      "type": "url",
      "id": "link3",
      "label": "Link 3"
    },
    {
      "type": "text",
      "id": "title3",
      "label": "Header 3",
      "default": "Feature"
    },
    {
      "type": "richtext",
      "id": "text3",
      "label": "Text 3",
      "default": "<p>Promotion description details.</p>"
    },
    {
      "type": "text",
      "id": "button_label3",
      "label": "Button label 3"
    }
  ],
  "presets": [{
    "name": "Custom 1x2",
    "category": "Image",
    "settings": {
      "featured_promos_per_row": "3",
      "featured_promos_grid": "full_width"
    }
  }]
}

{% endschema %}
